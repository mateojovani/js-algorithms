{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-compare-neg-zero": "off",
        "no-useless-escape": "off",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1,
                "MemberExpression": 0
            }
        ],
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "array-callback-return": "warn",
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "semi": [
            "warn",
            "never",
            {
                "beforeStatementContinuationChars": "always"
            }
        ],
        "max-params": "off",
        "max-len": [
            "warn",
            {
                "code": 140,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "no-trailing-spaces": [
            "warn",
            {
                "skipBlankLines": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "no-empty": "off",
        "valid-typeof": 2,
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ],
        "space-in-parens": [
            "warn",
            "never"
        ],
        "space-infix-ops": [
            "warn",
            {
                "int32Hint": false
            }
        ],
        "space-unary-ops": [
            "warn",
            {
                "words": true,
                "nonwords": false
            }
        ],
        "space-after-keywords": "off",
        "keyword-spacing": [
            "warn",
            {
                "after": true
            }
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2
            }
        ]
    }
}